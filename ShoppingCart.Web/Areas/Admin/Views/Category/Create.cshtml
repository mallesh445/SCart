@section Scripts
{
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
    <script src="//code.jquery.com/jquery-1.10.2.js"></script>
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <script src="~/Scripts/jquery-1.7.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            $('#btnCatSubmit').click(function () {
                //event.preventDefault();
                var categoryName = $('#newcategoryName').val();
                var categoryData = {
                    categoryName: categoryName
                };
                $.ajax({
                        type: "POST",
                        url: "Catelog/CreateNewCategory",
                        //url: '@Url.Action("CreateNewCategory", "Catelog")',
                        //data: JSON.parse('{ "name":"John", "age":30, "city":"New York"}'),
                        //data: categoryData,
                        data: "{}",
                        dataType: "application/json",
                        //dataType: "json",
                        contentType: 'application/json; charset=utf-8',
                        success: function (data) {
                            alert(data.msg);
                        },
                        failure: function (response) {
                            alert(response.responseText);
                        },
                        error: function (jqXHR, exception) {
                            var msg = '';
                            if (jqXHR.status === 0) {
                                msg = 'Not connect.\n Verify Network.';
                            } else if (jqXHR.status == 404) {
                                msg = 'Requested page not found. [404]';
                            } else if (jqXHR.status == 500) {
                                msg = 'Internal Server Error [500].';
                            } else if (exception === 'parsererror') {
                                msg = 'Requested JSON parse failed.';
                            } else if (exception === 'timeout') {
                                msg = 'Time out error.';
                            } else if (exception === 'abort') {
                                msg = 'Ajax request aborted.';
                            } else {
                                msg = 'Uncaught Error.\n' + jqXHR.responseText;
                            }
                            alert("Error occured! " + msg)
                        }
                    });
            });
        });
    </script>

}
